<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="dayNumber"
            type="String" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/dimen_day_width"
        android:layout_height="@dimen/dimen_day_height"
        android:background="@drawable/border_cell_day"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_day_part_height"
            android:gravity="top|center"
            android:maxLength="2"
            android:text="@{dayNumber}"
            tools:text="10" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="hello" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="hello" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>