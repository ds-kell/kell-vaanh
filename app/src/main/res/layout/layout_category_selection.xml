<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="@string/label_for_you"
        android:textColor="?colorOnSurface"
        android:textSize="@dimen/font_xmedium"
        app:layout_constraintBottom_toBottomOf="@id/tv_see_all"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_see_all" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_see_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="@string/label_see_all"
        android:textColor="?colorOnSurface"
        android:textSize="@dimen/font_medium"
        app:layout_constraintBottom_toBottomOf="@id/img_see_all"
        app:layout_constraintEnd_toStartOf="@id/img_see_all"
        app:layout_constraintTop_toTopOf="@id/img_see_all" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_see_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_forward"
        android:tint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>