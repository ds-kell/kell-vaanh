<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_login">
    <fragment
        android:id="@+id/fragment_login"
        android:name="kell.com.example.vaanh.ui.authentication.login.LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/to_home"
            app:destination="@+id/fragment_home" />
        <action
            android:id="@+id/to_sign_up"
            app:destination="@+id/fragment_sign_up" />
    </fragment>
    <fragment
        android:id="@+id/fragment_sign_up"
        android:name="kell.com.example.vaanh.ui.authentication.signup.SignUpFragment"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/to_login"
            app:destination="@+id/fragment_login" />
    </fragment>
    <fragment
        android:id="@+id/fragment_home"
        android:name="kell.com.example.vaanh.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home">
        <argument
            android:name="username"
            app:argType="string" />
    </fragment>
</navigation>